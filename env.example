# IRCTC Tatkal Automation Bot - Environment Variables Template
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=False
TESTING=False

# Server Configuration
HOST=0.0.0.0
PORT=5000
ENVIRONMENT=production

# Database Configuration (SQLite by default, can use PostgreSQL)
DATABASE_URL=sqlite:///irctc_bot.db
# DATABASE_URL=postgresql://username:password@localhost:5432/irctc_bot

# Encryption Configuration
ENCRYPTION_KEY=your-encryption-key-32-characters!

# IRCTC Configuration
IRCTC_BASE_URL=https://www.irctc.co.in
BROWSER_TIMEOUT=300
PAGE_LOAD_TIMEOUT=30

# Playwright Configuration
PLAYWRIGHT_HEADLESS=True
PLAYWRIGHT_SLOW_MO=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# File Paths
CONFIG_DIR=config
LOGS_DIR=logs
TEMP_DIR=temp

# Security Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=3

# Timing Configuration
TATKAL_AC_TIME=10:00
TATKAL_NON_AC_TIME=11:00
NTP_SERVER=pool.ntp.org

# Performance Configuration
MAX_CONCURRENT_BOOKINGS=1
REQUEST_DELAY=0.5
RETRY_ATTEMPTS=3

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.textlocal.in/send/

# Cloud Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=myredispassword

# Monitoring Configuration
ENABLE_METRICS=True
METRICS_PORT=9090

# Database Configuration (if using PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=irctc_bot
DB_USER=irctc_user
DB_PASSWORD=irctc_password

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100 per hour

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS=redis://localhost:6379/2
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=irctc_bot:

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# API Keys for External Services
CAPTCHA_SOLVER_API_KEY=your-captcha-solver-api-key
NOTIFICATION_API_KEY=your-notification-api-key

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_PUSH_NOTIFICATIONS=False
ENABLE_TELEGRAM_NOTIFICATIONS=False
ENABLE_AUTO_RETRY=True
ENABLE_BOOKING_QUEUE=True
ENABLE_PERFORMANCE_MONITORING=True
ENABLE_ERROR_TRACKING=True

# Development Configuration (only for development environment)
FLASK_ENV=production
FLASK_DEBUG=False
WERKZEUG_RUN_MAIN=true

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test_irctc_bot.db
TEST_REDIS_URL=redis://localhost:6379/15

# Docker Configuration
COMPOSE_PROJECT_NAME=irctc-tatkal-bot

# Grafana Configuration (for monitoring)
GRAFANA_PASSWORD=admin123

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=200h

# Backup S3 Configuration (optional)
S3_BACKUP_BUCKET=irctc-bot-backups
S3_BACKUP_PREFIX=backups/

# Webhook URLs (for notifications)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Time Zone Configuration
TZ=Asia/Kolkata

# Health Check Configuration
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_ENDPOINT=/api/health

# API Documentation
API_DOCS_ENABLED=True
API_DOCS_URL=/docs

# CORS Headers
CORS_ALLOW_HEADERS=Content-Type,Authorization
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Content Security Policy
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self unsafe-inline cdn.jsdelivr.net cdnjs.cloudflare.com
CSP_STYLE_SRC=self unsafe-inline cdn.jsdelivr.net cdnjs.cloudflare.com
CSP_IMG_SRC=self data: https:
CSP_FONT_SRC=self cdnjs.cloudflare.com

# Browser Configuration
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Proxy Configuration (if needed)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1